<?xml version="1.0"?>
<xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
               xmlns:f="urn:functions"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
               xmlns:xdt="http://www.w3.org/2005/04/xpath-datatypes"
               version="2.0">

  <xsl:output method="text"/>

  <xsl:function name="f:shownum">
    <xsl:param name="num"/>
    <xsl:choose>
      <xsl:when test="$num instance of xs:float">
        <xsl:text>float: </xsl:text>
        <xsl:value-of select="$num"/>
      </xsl:when>
      <xsl:when test="$num instance of xs:double">
        <xsl:text>double: </xsl:text>
        <xsl:value-of select="$num"/>
      </xsl:when>
      <xsl:when test="$num instance of xs:integer">
        <xsl:text>integer: </xsl:text>
        <xsl:value-of select="$num"/>
      </xsl:when>
      <xsl:when test="$num instance of xs:decimal">
        <xsl:text>decimal: </xsl:text>
        <xsl:value-of select="$num"/>
      </xsl:when>
      <xsl:otherwise>
        <xsl:text>not a number</xsl:text>
      </xsl:otherwise>
    </xsl:choose>
  </xsl:function>

  <xsl:template match="/">
    <xsl:value-of select="f:shownum(abs(xs:float('-INF')))"/>
  </xsl:template>

</xsl:transform>
