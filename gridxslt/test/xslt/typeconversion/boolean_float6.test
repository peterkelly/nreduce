<?xml version="1.0"?>
<xsl:transform xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
               xmlns:f="urn:functions"
               xmlns:xs="http://www.w3.org/2001/XMLSchema"
               xmlns:xdt="http://www.w3.org/2005/04/xpath-datatypes"
               version="2.0">

  <xsl:output method="text"/>

  <xsl:function name="f:showval">
    <xsl:param name="val"/>
    <xsl:choose>
      <xsl:when test="$val instance of xs:boolean">
        <xsl:text>boolean: </xsl:text>
        <xsl:value-of select="$val"/>
      </xsl:when>
      <xsl:otherwise>
        <xsl:text>not boolean</xsl:text>
      </xsl:otherwise>
    </xsl:choose>
  </xsl:function>

  <xsl:template match="/">
    <xsl:value-of select="f:showval(xs:boolean(xs:float('-0.05')))"/>
  </xsl:template>

</xsl:transform>
