\newcounter{enum@step}
\newenvironment{enumstep}[1][1]{%
  \begin{enumerate}\begin{raggedright}%
      \ifnum\the\@itemdepth=1%
         \setcounter{enum@step}{#1}%
         \addtocounter{enum@step}{-1}%
      \fi%
      \def\item{\stepcounter{enum@step}%
         \FromSlide{\theenum@step}\orig@item}%
    }{\end{raggedright}\end{enumerate}\ifnum\the\@itemdepth=0\setcounter{enum@step}{0}\fi}

