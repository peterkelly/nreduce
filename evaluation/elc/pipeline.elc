range from to =
(if (<= from to)
    (cons from (range (+ from 1) to))
    nil)

foldr f base lst =
(if lst
    (f (head lst) (foldr f base (tail lst)))
    base)

mkrequest n ms     = (++ (numtostring n) (++ " " (numtostring ms)))

parseresponse resp = (stringtonum (tail resp))

main args =
(if (< (len args) 4)
  "Usage: pipeline.elc nitems comp port services...\n"
(letrec nitems = (stringtonum (item 0 args))
        compms = (stringtonum (item 1 args))
        port = (stringtonum (item 2 args))
        services = (skip 3 args)
        callservice host n =
          (parseresponse (connect host port (mkrequest n compms)))
        f lst x = (if lst
                      (callservice (head lst) (f (tail lst) x))
                      x)
        result = (map (f services) (range 1 nitems))
 in     (foldr ++ "END\n" (map (!x.++ (numtostring x) "\n") result))))
