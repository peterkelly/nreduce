mkrequest n ms     = (++ (ntos n) (++ " " (ntos ms)))

parseresponse resp = (ston (tail resp))

main args =
(if (< (len args) 5)
  "Usage: pp-comp.elc nitems nstages comp host port\n"
(letrec nitems = (ston (item 0 args))
        nstages = (ston (item 1 args))
        compms = (ston (item 2 args))
        host = (item 3 args)
        port = (ston (item 4 args))
        callservice n =
          (parseresponse (connect host port (mkrequest n compms)))
        f n x = (if (> n 0)
                    (callservice (f (- n 1) x))
                    x)
        result = (map (f nstages) (range 1 nitems))
 in     (foldr ++ "END\n" (map (!x.++ (ntos x) "\n") result))))
