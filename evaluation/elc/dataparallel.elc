range from to =
(if (<= from to)
    (cons from (range (+ from 1) to))
    nil)

foldr f base lst =
(if lst
    (f (head lst) (foldr f base (tail lst)))
    base)

mkrequest n ms = (++ (numtostring n) (++ " " (numtostring ms)))

main args =
(if (< (len args) 4)
    "Usage: dataparallel.elc host port size compms\n"
(letrec host = (item 0 args)
        port = (stringtonum (item 1 args))
        size = (stringtonum (item 2 args))
        compms = (stringtonum (item 3 args))
        callservice n = (connect host port (mkrequest n compms))
        results = (map callservice (range 1 size))
 in     (foldr ++ "\nEND\n" results)))
