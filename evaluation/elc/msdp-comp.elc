sum lst =
(if lst
    (+ (head lst) (sum (tail lst)))
    0)

mkrequest n ms     = (++ (ntos n) (++ " " (ntos ms)))

parseresponse resp = (ston (tail resp))

main args =
(if (< (len args) 4)
    "Usage: msdp-comp.elc host port size stages compms\n"

(letrec host = (item 0 args)
        port = (ston (item 1 args))
        size = (ston (item 2 args))
        stages = (ston (item 3 args))
        compms = (ston (item 4 args))
        callservice n =
          (parseresponse (connect host port (mkrequest n compms)))
        loop total stages =
          (if (> stages 0)
              (letrec
                 res = (map (!x.callservice (+ total x)) (range 1 size))
                 total2 = (callservice (sum res))
               in
                 (loop total2 (- stages 1)))
              total)
        result = (loop 0 stages)
 in     (++ (ntos result) "\nEND\n")))
