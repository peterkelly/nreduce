main args =
(if (< (len args) 2)
    "Please specify host and port\n"

(letrec host = (item 0 args)
        port = (ston (item 1 args))

        callservice a b = (ston (connect host
                                                port
                                                (++ (ntos (+ a b))
                                                    " 1")))

        result = (foldr callservice 0 (range 1 5))


 in     (++ (ntos result) "\n")))

