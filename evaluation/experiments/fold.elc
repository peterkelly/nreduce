foldr f base lst =
(if lst
    (f (head lst) (foldr f base (tail lst)))
    base)

foldl f base lst =
(if lst
    (foldl f (f base (head lst)) (tail lst))
    base)

main =
(letrec lst = (cons 1 (cons 2 (cons 3 (cons 4 (cons 5 nil)))))
        resl = (foldl - 0 lst)
        resr = (foldr - 0 lst)
 in     (++ "foldl: " (++ (numtostring resl) (++ "\n"
        (++ "foldr: " (++ (numtostring resr) "\n"))))))
